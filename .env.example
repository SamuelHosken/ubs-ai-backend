# ==============================================
# UBS Portfolio AI - Backend Configuration
# ==============================================
# 
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# Application Settings
# ==============================================
APP_NAME="UBS Portfolio AI"
DEBUG=True
ENVIRONMENT=development

# ==============================================
# Database Configuration
# ==============================================
# SQLite (development)
DATABASE_URL=sqlite:///./ubs_portfolio.db

# PostgreSQL (production example)
# DATABASE_URL=postgresql://user:password@localhost:5432/ubs_portfolio

# ==============================================
# Security & Authentication
# ==============================================
# IMPORTANT: Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# OpenAI Configuration
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# ==============================================
# Cohere Configuration (Optional - for reranking)
# ==============================================
# Get your API key from: https://dashboard.cohere.com/api-keys
# Leave empty to disable reranking
COHERE_API_KEY=

# ==============================================
# Vector Database (ChromaDB)
# ==============================================
CHROMA_PERSIST_DIRECTORY=./data/embeddings

# ==============================================
# CORS Settings
# ==============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
